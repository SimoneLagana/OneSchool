<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= stylesheet_link_tag "news.css" %>
    <%= javascript_include_tag('family.js') %>

    <title>Document</title>
</head>
<body>
    <nav class="navbar">
        <%= link_to family_home_url(CF: params[:CF], CFstudent: params[:CFstudent]) do %>
            <div class="profile">
                home
            </div>
        <% end %>

        <%= link_to family_choose_url(CF: params[:CF]) do %>
            <div class="profile">
                Change student
            </div>
        <% end %>

        <%= link_to family_profile_url(CF: params[:CF]) do %>
            <div class="profile">
                Profile
            </div>
        <% end %>
    </nav>

    

    <div class="panel">
          
        <table>
            <thead>
                <tr>
                <th> Titolo </th>
                <th> Teacher</th>
                </tr>
            </thead>

            <tbody>
                <div id="popup" class="popup">
        
                </div>      
                <% @news.each do |news| %>
                    <tr>
                        

                        <td>
                        <button class="profile-button" onclick="popup('<%= news.text %>')"> <%= news.title %></button>
                        
                        </td>
                        <td><%= news.date %></td>
                  
                    </tr>
                <% end %>
            </tbody>
        </table>

        

    </div>

</body>
</html>
