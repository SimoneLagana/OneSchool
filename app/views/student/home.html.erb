//STUDENT HOME

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <%= stylesheet_link_tag "student_home.css" %>
    <%# <%= javascript_include_tag('teacher.js') %> 
    <title>Home</title>
</head>
<body>
    <nav class="navbar">
        <%= link_to student_home_url(CF: params[:CF]), class: "link-profile no-underline" do %>
            <label class="writ"> Classroom: 
            <%= @student.student_class_code %>
            </label>
        <% end %>
        <%= link_to student_profile_url(CF: params[:CF]), class: "link-profile no-underline" do %>
            <div class="profile">
                Profile
            </div>
        <% end %>
      </nav>
    <div class="home">
        <div class="panel-container">

            <%= link_to student_grades_url(CF: params[:CF]) , class: "no-underline" do %>
            <div class="panel">
                Grades
            </div>
             <% end %>

            <%= link_to student_absence_url(CF: params[:CF]), class: "no-underline" do %>
            <div class="panel">
                Absences
            </div>
             <% end %>
            
            <%= link_to student_homework_url(CF: params[:CF]), class: "no-underline" do %>
            <div class="panel">
                Homeworks
            </div>
             <% end %>

            <%= link_to student_agenda_url(CF: params[:CF]), class: "no-underline" do %>
            <div class="panel">
                Agenda
            </div>
             <% end %>

            <%= link_to student_news_url(CF: params[:CF]), class: "no-underline" do %>
            <div class="panel">
                News
            </div>
             <% end %>

            <%= link_to student_notes_url(CF: params[:CF]), class: "no-underline" do %>
            <div class="panel">
                Personal notes
            </div>
             <% end %>

             <%= link_to student_timetable_url(CF: params[:CF]), class: "no-underline" do %>
            <div class="panel">
                Class timetable
            </div>
             <% end %>

            <% if $ofAge %>
                <%= link_to student_meeting_choice_url(CF: params[:CF]) do %>
                    <div class="panel" id="meeting_panel">
                        Meeting
                    </div>
                <% end %>
            <%end%>
        </div>
    </div>
    
</body>
</html>